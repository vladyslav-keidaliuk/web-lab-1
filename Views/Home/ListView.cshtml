@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books";
    Layout = "_Layout";

}


<table class="table table-sm table-striped">
    <thead>
        <tr><th>ID</th><th>Title</th><th>Category</th><th>Price</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Title</td>
                <td>@p.Category</td>
                <td>$@p.Price.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>
